@{
    //ViewData["Title"] = "Home Page";
}

    <div style="width:90%">
        <h2>Bienvenido</h2>
        <p>Para completar la tarea es necesario que proveea el archivo (DocumentIdList.xlsx) con los Ids de los documentos a procesar</p>

        @using (Html.BeginForm("UploadExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="modal-body" style="padding-left:0px">
                <div class="form-group">
                    <input type="file" id="fileupload" name="fileupload" accept=".xls, .xlsx" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary">Procesar</button>
            </div>
            @if (TempData["SelectFile"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Warning!</strong> selecciona un archivo.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }

        @if (TempData["Ok"] != null)
        {
            if ((bool)TempData["Ok"])
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> archivos procesados correctamente.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Danger!</strong> Error al obtener los archivos, intente de nuevo mas tarde.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }


    </div>
